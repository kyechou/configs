# Pulse Audio controls
set $output_sink "$(pactl list short sinks | grep output | head -n1 | cut -f2)"
set $input_source "$(pactl list short sources | grep input | head -n1 | cut -f2)"
bindsym $mod+period          exec --no-startup-id pactl set-sink-volume $output_sink +1dB
bindsym $mod+comma           exec --no-startup-id pactl set-sink-volume $output_sink -1dB
bindsym $mod+m               exec --no-startup-id pactl set-sink-volume $output_sink 13
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $output_sink +1dB
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $output_sink -1dB
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-volume $output_sink 13
exec --no-startup-id pactl set-sink-volume $output_sink 13
exec --no-startup-id pactl set-source-volume $input_source 0%

# Touchpad controls
bindsym Control+F1 exec --no-startup-id xinput --disable 'ELAN1200:00 04F3:306F Touchpad'
bindsym Control+F2 exec --no-startup-id xinput --enable 'ELAN1200:00 04F3:306F Touchpad'

# Keyboard and mouse config
bindsym Control+F3 exec --no-startup-id xset r rate 400 35
bindsym Control+F4 exec --no-startup-id xset m 0 0
exec --no-startup-id xset r rate 400 35	# autorepeat delay: 400 ms, autorepeat rate: 35 hits/sec
exec --no-startup-id xset m 0 0		# acceleration: 0, threshold: 0

# Screen backlight
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 3
bindsym XF86MonBrightnessUp   exec --no-startup-id light -A 3
bindsym Control+F5            exec --no-startup-id light -U 3
bindsym Control+F6            exec --no-startup-id light -A 3
exec --no-startup-id light -S 60

# Touch screen controls
bindsym Control+F7 exec --no-startup-id xinput --disable 'pointer:ELAN2556:00 04F3:25EE'
bindsym Control+F8 exec --no-startup-id xinput --enable  'pointer:ELAN2556:00 04F3:25EE'

# Disable DPMS (Energy Star) and screen saver blanking
exec --no-startup-id xset s off -dpms

# Startup programs
exec_always --no-startup-id ~/.config/polybar/launch.sh
exec_always --no-startup-id feh --bg-fill ~/pic/wallpaper/snow.jpg
exec --no-startup-id xinput --set-prop 'ELAN1200:00 04F3:306F Touchpad' 'libinput Tapping Enabled' 1
exec --no-startup-id xinput --enable   'ELAN1200:00 04F3:306F Touchpad'	# enable touchpad
exec --no-startup-id xinput --disable  'pointer:ELAN2556:00 04F3:25EE'	# disable touch screen
exec --no-startup-id lxpolkit	# needed for virt-manager
exec --no-startup-id nm-applet
exec --no-startup-id ibus-daemon --daemonize --replace
exec --no-startup-id udiskie -At
exec --no-startup-id sh -c 'until ping -c1 www.google.com >/dev/null 2>&1; do sleep 1; done; exec rambox'
exec --no-startup-id sh -c 'until ping -c1 www.google.com >/dev/null 2>&1; do sleep 1; done; exec thunderbird'
