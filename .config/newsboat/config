keep-articles-days 30
refresh-on-startup yes
text-width 80

# vim-like key bindings
bind-key j  down
bind-key k  up
bind-key l  open
bind-key h  quit articlelist
bind-key h  quit article
bind-key h  quit tagselection
bind-key h  quit filterselection
bind-key h  quit urlview
bind-key ^D pagedown
bind-key ^U pageup
bind-key g  home
bind-key G  end
bind-key J  next-feed articlelist
bind-key K  prev-feed articlelist
bind-key J  next article
bind-key K  prev article
bind-key a  toggle-article-read
bind-key A  mark-feed-read articlelist
bind-key A  mark-all-feeds-read feedlist
bind-key d  delete-article
bind-key D  purge-deleted
unbind-key s
unbind-key ^K
unbind-key N
unbind-key e
unbind-key ^B
unbind-key ^E
unbind-key ,
unbind-key E
unbind-key v
unbind-key ^V
unbind-key ^G

